<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject.Controllers.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <StackLayout>
            <Frame BackgroundColor="#3e3e38" Padding="24" CornerRadius="0">
                <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout Spacing="30" VerticalOptions="CenterAndExpand" Margin="10, 0, 10, 0">
                <StackLayout>
                    <Entry x:Name="txtEmail" Placeholder="Email..." HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <StackLayout>
                    <Entry x:Name="txtPassword" Placeholder="Password..." HorizontalOptions="FillAndExpand" IsPassword="True"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Margin="10, 0, 10, 0">
                <Button x:Name="btnLogin" Text="Login" Background="#3e3e38" TextColor="White" FontSize="20" CornerRadius="10" Clicked="btnLogin_Clicked"/>
                <Button x:Name="btnSignUp" Text="Sign Up" Background="Transparent" TextColor="Blue" FontSize="18" Clicked="btnSignUp_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>